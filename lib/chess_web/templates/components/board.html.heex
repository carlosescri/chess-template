<div class="board">
  <%= for row <- 0..7 do %>
    <%= for col <- 0..7 do %>
      <.square figure={get_figure(@state, row, col)} row={row} col={col}>
        <%= if get_figure(@state, row, col) do %>
          <div class={"figure #{get_figure_class(@state, row, col)}"}></div>
        <% end %>
      </.square>
    <% end %>
  <% end %>
</div>